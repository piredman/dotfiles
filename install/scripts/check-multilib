#!/usr/bin/env bash

set -euo pipefail

# =============================================================================
# CONSTANTS
# =============================================================================

readonly PACMAN_CONF="/etc/pacman.conf"

# =============================================================================
# FUNCTIONS
# =============================================================================

_is_multilib_enabled() {
    grep -q "^\[multilib\]" "$PACMAN_CONF"
}

# =============================================================================
# MAIN EXECUTION
# =============================================================================

if _is_multilib_enabled; then
    echo "✓ Multilib already enabled"
    exit 0
else
    echo "✗ Multilib not enabled"
    exit 1
fi